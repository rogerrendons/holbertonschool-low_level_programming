#include "holberton.h"
#include <stdio.h>

/**
 * is_prime_number - check the code for Holberton School students.
 * @n: number base.
 * Return: Always 0.
 */

int is_prime_number(int n)
{

	int div = 0;

	if (n == 1)
	{
		return (0);
	}
	if (!div)
	{
		div = n;
		--n;
	}
	if (!(div % n))
	{
		return (0);
	}
	return (is_prime_number(--n));
}
